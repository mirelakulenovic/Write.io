@model List<Write.io.Models.Blog>
@{
    ViewBag.Title = "Home Page";
}

<div id="FrontPageIntroBlock">
    <div id="IntroBlockTextContainer">
        <div id="IntroBlockHeader">
            <h2>Write.IO</h2>
        </div>
        <div id="IntroBlockBody">
            <p>We do things! Our product is awesome. Millions of people use our product on a daily basis. Create your own free blog today!</p>
        </div>
    </div>
    <div id="IntroBlockButton">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddBlog","User")'")>Create a Blog</button>
    </div>
</div>

<div id="FrontPageSearchContainer" class="container pt-4">
    <input id="FrontpageSearch" class="form-control" type="search" placeholder="Type here to search..." aria-label="Search" />
</div>
<div id="HomePageBlogGrid" class="container pt-4">
    @Html.Partial("_BlogGridPartial", Model)
</div>